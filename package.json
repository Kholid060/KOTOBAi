{
  "name": "kotobai",
  "version": "0.1.0",
  "description": "Shows Japanese word definitions and reading by hovering over words.",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "yarn build:hmr && (run-p wss build:watch)",
    "dev:firefox": "yarn build:hmr && (run-p wss build:firefox:watch)",
    "commitlint": "commitlint --edit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier . --write",
    "prepare": "husky install",
    "build:zip": "node ./utils/scripts/build-zip.js",
    "build:prod": "yarn build:prod-chrome && yarn build:prod-firefox",
    "build:prod-chrome": "yarn build && yarn build:zip",
    "build:prod-firefox": "yarn build:firefox && cross-env __FIREFOX__=true yarn build:zip",
    "generate-data": "node ./utils/scripts/generate-data.js"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/react": "^0.26.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@react-spring/web": "^9.7.3",
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "@types/webextension-polyfill": "^0.10.6",
    "@use-gesture/react": "^10.3.0",
    "axios": "^1.6.2",
    "axios-retry": "^4.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^0.2.0",
    "compare-versions": "^6.1.0",
    "construct-style-sheets-polyfill": "3.1.0",
    "dayjs": "^1.11.10",
    "deepmerge": "^4.3.1",
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.7",
    "eventemitter3": "^5.0.1",
    "events": "^3.3.0",
    "fetch-retry": "^5.0.6",
    "jszip": "^3.10.1",
    "lucide-react": "^0.303.0",
    "nanoid": "^5.0.4",
    "pako": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-tinder-card": "^1.6.4",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "type-fest": "^4.8.2",
    "usehooks-ts": "^2.9.1",
    "wanakana": "^5.3.1",
    "webextension-polyfill": "0.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "18.2.0",
    "@commitlint/config-conventional": "18.1.0",
    "@rollup/plugin-typescript": "11.1.5",
    "@testing-library/react": "14.0.0",
    "@types/archiver": "^6.0.2",
    "@types/chrome": "0.0.251",
    "@types/deepmerge": "^2.2.0",
    "@types/node": "20.8.10",
    "@types/pako": "^2.0.3",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/ws": "8.5.8",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "@vitejs/plugin-react": "2.2.0",
    "archiver": "^6.0.1",
    "autoprefixer": "^10.4.16",
    "chokidar": "3.5.3",
    "commander": "^11.1.0",
    "cross-env": "7.0.3",
    "eslint": "8.53.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "fs-extra": "11.1.1",
    "husky": "8.0.3",
    "libxmljs": "^1.0.11",
    "lint-staged": "15.0.2",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.31",
    "prettier": "3.0.3",
    "rollup": "4.3.0",
    "semver": "^7.5.4",
    "tailwindcss": "^3.3.5",
    "ts-loader": "9.5.0",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "vite": "^5.0.2",
    "ws": "8.14.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
